@model hackingion.Models.Login
<meta charset="utf-8" />
@{
    ViewData["Title"] = "Login";
}
<h2>Вход на сайт</h2>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="UserName">Имя пользователя</label><br />
                <input type="text" asp-for="UserName" />
                <span asp-validation-for="UserName" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="RememberMe">Пароль</label><br />
                <input asp-for="RememberMe" />
                <span asp-validation-for="RememberMe" />
            </div>


            <div class="form-group">
                <input type="submit" value="Войти" class="btn" />
            </div>
 

        </div>
    </form>
